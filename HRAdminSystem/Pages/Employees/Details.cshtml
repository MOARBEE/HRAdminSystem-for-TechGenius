@page
@model HRAdminSystem.Pages.Employees.DetailsModel
@{
    ViewData["Title"] = "Employee Details";
}

<h1>Employee Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Employee.FirstName @Model.Employee.LastName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Employee.EmailAddress</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Employee.TelephoneNumber</dd>

        <dt class="col-sm-2">Manager</dt>
        <dd class="col-sm-10">@Model.Employee.ManagerName</dd>

        <dt class="col-sm-2">Departments</dt>
        <dd class="col-sm-10">@string.Join(", ", Model.Employee.Departments)</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Employee.Status</dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Employee.Id" class="btn btn-primary">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>