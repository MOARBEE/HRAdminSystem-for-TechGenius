@page
@model HRAdminSystem.Pages.Employees.CreateModel
@{
    ViewData["Title"] = "Create Employee";
}

<h1>Create Employee</h1>

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Employee.FirstName"></label>
                <input asp-for="Employee.FirstName" class="form-control" />
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Employee.LastName"></label>
                <input asp-for="Employee.LastName" class="form-control" />
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Employee.EmailAddress"></label>
                <input asp-for="Employee.EmailAddress" class="form-control" />
                <span asp-validation-for="Employee.EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Employee.TelephoneNumber"></label>
                <input asp-for="Employee.TelephoneNumber" class="form-control" />
                <span asp-validation-for="Employee.TelephoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Employee.ManagerId"></label>
                <select asp-for="Employee.ManagerId" asp-items="Model.Employee.AvailableManagers" class="form-control">
                    <option value="">-- Select Manager --</option>
                </select>
                <span asp-validation-for="Employee.ManagerId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Employee.SelectedDepartments"></label>
                <select asp-for="Employee.SelectedDepartments" asp-items="Model.Employee.AvailableDepartments" class="form-control" multiple>
                </select>
                <span asp-validation-for="Employee.SelectedDepartments" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
